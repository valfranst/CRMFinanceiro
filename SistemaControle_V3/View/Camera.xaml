<Window x:Class="SistemaControle_V3.Camera"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaControle_V3"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        
        mc:Ignorable="d"
        Title="Camera" Height="500" Width="800" Loaded="Window_Loaded" Closed="Window_Closed" Unloaded="Window_Unloaded" WindowStartupLocation="CenterScreen">
    <Grid>

        <Image HorizontalAlignment="Stretch" Name="frameHolder"  VerticalAlignment="Stretch"  Stretch="Fill"/>
        
        <Button x:Name="btCapturar" Margin="0 0 0 10" Style="{StaticResource MaterialDesignFloatingActionAccentButton}" ToolTip="Fotografar" Click="btCapturar_Click" 
                Width="60" Height="60" VerticalAlignment="Bottom" HorizontalAlignment="Center" VerticalContentAlignment="Center">
            <materialDesign:PackIcon Kind="PhotoCamera" Height="50" Width="50"  />
        </Button>

    </Grid>
</Window>
